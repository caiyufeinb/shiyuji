    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/invisible3"/>

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/invisible3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="75dp"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:textColor="@color/cardview_light_background"
        android:text="第二关" />

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/two"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@id/invisible3"
        android:layout_toRightOf="@id/invisible3"
        android:background="@android:color/transparent"
        android:text="第三关"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp" />

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/invisible3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginBottom="59dp"
        android:background="@android:color/transparent"
        android:text="第四关"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp" />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/invisible4"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/five"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/invisible4"
        android:layout_marginTop="55dp"
        android:text="第五关"
        android:layout_toEndOf="@+id/invisible4"
        android:textSize="20sp"
        android:textColor="@color/cardview_light_background"
