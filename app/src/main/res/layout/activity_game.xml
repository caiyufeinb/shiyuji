<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgame">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invisible1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/invisible1"
        android:layout_toRightOf="@+id/invisible1"
        android:text="第一关"/>
    <Button
        android:id="@+id/invisible2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/invisible2"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:text="第二关"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/invisible3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:layout_below="@id/invisible3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="第三关"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/four"
        android:layout_toRightOf="@id/invisible3"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/invisible3"
        android:layout_above="@id/three"
        android:text="第四关"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/five"
        android:layout_above="@id/invisible3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="第五关"/>
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/invisible4"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/invisible4"
        android:layout_marginTop="55dp"
        android:text="第六关“"
        android:layout_toEndOf="@+id/invisible4" />


</RelativeLayout>